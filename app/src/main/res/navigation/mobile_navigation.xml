<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_month">

    <fragment
        android:id="@+id/navigation_month"
        android:name="com.misnadqasim.pocketmoney.ui.month.MonthFragment"
        android:label="@string/title_month"
        tools:layout="@layout/fragment_month" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.misnadqasim.pocketmoney.ui.dashboard.DashboardFragment"
        android:label="@string/title_analytics"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.misnadqasim.pocketmoney.ui.notifications.NotificationsFragment"
        android:label="@string/title_year"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.misnadqasim.pocketmoney.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@xml/root_preferences" />

