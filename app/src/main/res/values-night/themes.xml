<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketMoney" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_pink</item>
        <item name="colorPrimaryVariant">@color/cardview_dark_background</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar and navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cardview_dark_background</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/cardview_dark_background</item>
        <!-- Customize your theme here. -->
    </style>
</resources>